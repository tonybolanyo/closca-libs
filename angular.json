{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "angular-foundation": {
      "projectType": "library",
      "root": "projects/angular-foundation",
      "sourceRoot": "projects/angular-foundation/src",
      "prefix": "tyris",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/angular-foundation/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/angular-foundation/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/angular-foundation/tsconfig.spec.json",
            "main": "projects/angular-foundation/src/test.ts",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "codeCoverage": true,
            "codeCoverageExclude": [
              "projects/angular-foundation/src/test.ts",
              "projects/angular-foundation/src/**/*.spec.ts",
              "projects/angular-foundation/src/**/*.d.ts"
            ]
          }
        }
      }
    }
  }
}
